{
  "name": "evergreen-github-companion",
  "productName": "EverGreen GitHub Companion",
  "version": "0.0.1",
  "private": "true",
  "description": "Helps you keep your GitHub profile green (and not through illegitimate means).",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --config .prettierrc.js * --write",
    "prepare": "husky install",
    "precommit": "npm run lint:fix && npm run format && npm run test",
    "clean": "rm -rf .webpack out"
  },
  "keywords": [],
  "author": {
    "name": "andrewkolos",
    "email": "andrewrkolos@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "EverGreenGitHubCompanion"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@akolos/eslint-config-typescript": "^4.0.2",
    "@akolos/prettier-config": "^1.0.0",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/node-cron": "^3.0.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "arraybuffer-to-buffer": "^0.0.7",
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.0.0",
    "electron": "19.0.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.6.2",
    "style-loader": "^3.0.0",
    "tailwindcss": "^3.0.24",
    "ts-loader": "^9.2.2",
    "typescript": "~4.5.4",
    "zod": "^3.17.3"
  },
  "dependencies": {
    "@akolos/event-emitter": "^3.0.2",
    "@dnd-kit/core": "^6.0.2",
    "@dnd-kit/modifiers": "^6.0.0",
    "@dnd-kit/sortable": "^7.0.0",
    "@dnd-kit/utilities": "^3.2.0",
    "@octokit/rest": "^18.12.0",
    "cron-time-generator": "^1.3.0",
    "dotenv": "^16.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "electron-unhandled": "^4.0.1",
    "fs-extra": "^10.1.0",
    "node-cron": "^3.0.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.3.1",
    "simple-git": "^3.7.1",
    "ts-dedent": "^2.2.0",
    "ts-enum-util": "^4.0.2",
    "ts-key-enum": "^2.0.11"
  }
}
